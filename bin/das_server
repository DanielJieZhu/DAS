#!/usr/bin/env bash

# setup environment
#. `dirname $0`/setup.sh

usage="Usage: das_server <web|cache> {start|stop|status|restart|stdout}"
if [ $# != 2 ]; then
    echo $usage
    exit 1
fi

server="$1"

# run actual script
cmd="$DAS_ROOT/src/python/DAS/web/das_server.py --server=$server"

if [ -z $DAS_ROOT ]; then
   echo "The DAS_ROOT environment is not set"
   exit 1
fi

RETVAL=$?

pid=`ps auxwww | grep das_server.py | grep "server=$server" | grep -v grep | awk 'BEGIN{ORS=" "} {print $2}'`
#echo $pid

function das_server_status()
{
    pid=`ps auxwww | grep das_server.py | grep "server=$server" | grep -v grep | awk 'BEGIN{ORS=" "} {print $2}'`
    if [ ! -z "${pid}" ]; then
        echo $"DAS $server is running, pid=${pid}"
        ps -f -wwww -p ${pid}
    else
        echo $"DAS $server is not running"
    fi
}

case "$2" in
 stdout)
        echo $"Checking for existing DAS $server..."
        if [ ! -z "${pid}" ]; then
          kill -9 ${pid}
        fi
        echo $"Restart DAS $server..."
        ${cmd}
        ;;
 restart)
        echo $"Checking for existing DAS $server..."
        if [ ! -z "${pid}" ]; then
          kill -9 ${pid}
        fi
        echo $"Restart DAS $server..."
        nohup ${cmd} 2>&1 1>& /dev/null < /dev/null &
        das_server_status
        ;;
 start)
        if [ ! -z "${pid}" ]; then
          kill -9 ${pid}
        fi
        echo $"Start DAS $server..."
        nohup ${cmd} 2>&1 1>& /dev/null < /dev/null &
        das_server_status
        ;;
 status)
        das_server_status
        ;;
 stop)
        if [ ! -z "${pid}" ]; then
          kill -9 ${pid}
        fi
        ;;
 *)
        echo $usage
        exit 1
        ;;
esac

exit $RETVAL

