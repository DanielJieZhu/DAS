<div><h3>Current Schedule</h3></div>
<div><h4>Scheduled</h4></div>
<div><table>
<tr><th>Scheduled</th><th>Name</th><th>Class</th><th>Commands</th><th></th></tr>
#import time
#for $task in $schedule
<tr><td>#echo time.strftime('%H:%M:%S',time.localtime($task.at))# (#echo int($task.at - $now)# sec)</td>
<td><a href='$base/task?id=$task.master_id'>$task.name</a></td>
<td>$task.classname</td>
<td><a href='$base/remove_task?id=$task.master_id'>Remove</a></td>
<td>
<form name='reschedule-$task.master_id' action='$base/reschedule_task' method='get'>
<input type='text' name='at' value='$task.at'>
<input type='hidden' name='id' value='$task.master_id'>
<input type='submit' value='Reschedule'> 
</form>
</td>
<td></tr>

#end for
</table></div>
<div><h4>Running</h4></div>
<div><table>
<tr><th>Started</th><th>Name</th><th>Class</th></tr>
#for $task in $running
<tr><td>#echo time.strftime('%H:%M:%S',time.localtime($task.started))# (#echo int($now - $task.started)# sec)</td>
<td><a href='$base/task?id=$task.master_id'>$task.name</a></td>
<td>$task.classname</td></tr>
#end for
</table></div>
